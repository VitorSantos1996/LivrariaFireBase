<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageHome"
        android:layout_width="130dp"
        android:layout_height="130dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tituloHome"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_gravity="left|center_vertical"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="left|center_vertical"
        android:text="Titulo"
        app:layout_constraintStart_toEndOf="@+id/imageHome"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/autorHome"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="left|center_vertical"
        android:text="Autor"
        app:layout_constraintStart_toEndOf="@+id/imageHome"
        app:layout_constraintTop_toBottomOf="@+id/tituloHome" />

    <TextView
        android:id="@+id/editorahome"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="7dp"
        android:gravity="left|center_vertical"
        android:text="Editora"
        app:layout_constraintStart_toEndOf="@+id/imageHome"
        app:layout_constraintTop_toBottomOf="@+id/autorHome" />
</android.support.constraint.ConstraintLayout>